JAVA 

// 1. Selecionar os elementos do HTML
const inputPeso = document.getElementById('peso');
const inputAltura = document.getElementById('altura');
const btnCalcular = document.getElementById('calcular');
const resultadoElemento = document.getElementById('resultado');
// 2. Adicionar o "ouvinte" de clique no botão
btnCalcular.addEventListener('click', () => {
 // 3. Obter os valores dos campos e converter para número
 const peso = Number(inputPeso.value);
 const alturaCm = Number(inputAltura.value);
 // Bônus: Validar se os campos estão preenchidos
 if (peso === 0 || alturaCm === 0) {
 resultadoElemento.textContent = "Por favor, preencha todos os campos.";
 return; // Interrompe a função se a validação falhar
 }
 // 4. Converter altura de cm para metros
 const alturaM = alturaCm / 100;
 // 5. Calcular o IMC
 const imc = peso / (alturaM * alturaM);
 // 6. Arredondar o resultado para duas casas decimais
 const imcArredondado = imc.toFixed(2);
 // 7. Usar a lógica (if/else if/else) para classificar o IMC
 let classificacao = '';
 if (imc < 18.5) {
 classificacao = 'Abaixo do peso';
 } else if (imc >= 18.5 && imc <= 24.9) {
 classificacao = 'Peso normal';
 } else if (imc >= 25 && imc <= 29.9) {
 classificacao = 'Sobrepeso';
 } else {
 classificacao = 'Obesidade';
 }
 // 8. Exibir o resultado final na página
 resultadoElemento.textContent = `Seu IMC é ${imcArredondado}
(${classificacao}).`;
});
